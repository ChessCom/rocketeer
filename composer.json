{
  "name": "rocketeers/rocketeer",
  "description": "Rocketeer is a fast and simple deployer for the PHP world",
  "homepage": "http://rocketeer.autopergamene.eu",
  "license": "MIT",
  "keywords": [
    "laravel",
    "deploy",
    "deployment",
    "task",
    "ssh"
  ],
  "authors": [
    {
      "name": "Maxime Fabre",
      "email": "ehtnam6@gmail.com",
      "homepage": "http://autopergamene.eu/en"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "illuminate/support": "^4.2.7",
    "illuminate/console": "~4.2",
    "illuminate/container": "^4.2.7",
    "illuminate/filesystem": "~4.2",
    "jeremeamia/superclosure": "~2.0",
    "kherge/amend": "~3.0",
    "kzykhys/parallel": "0.1.*",
    "league/event": "~2.1",
    "patchwork/utf8": "~1.1",
    "phpseclib/phpseclib": "2.0.*@dev",
    "symfony/config": "~2.6",
    "symfony/var-dumper": "~2.6",
    "symfony/process": "~2.6"
  },
  "require-dev": {
    "fabpot/php-cs-fixer": "2.0.*@dev",
    "johnkary/phpunit-speedtrap": "~1.0@dev",
    "mockery/mockery": "^0.9.1",
    "nesbot/carbon": "~1.13",
    "phpunit/phpunit": "~4.4",
    "psy/psysh": "0.4.*",
    "rocketeers/rocketeer-laravel": "1.0.*@dev"
  },
  "suggest": {
    "psy/psysh": "Required for the 'tinker' command",
    "anahkiasen/rocketeer-campfire": "Campfire plugin to create deployments notifications",
    "anahkiasen/rocketeer-slack": "Slack plugin to create deployments notifications",
    "ext-pcntl": "Allow parallel deployments"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "php-cs-fixer fix",
    "build": "box build --verbose"
  },
  "bin": [
    "bin/rocketeer"
  ],
  "autoload": {
    "psr-4": {
      "Rocketeer\\": "src/Rocketeer"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rocketeer\\": "tests"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "3.0-dev"
    }
  }
}
